@model ProducerViewModel

@{
    ViewData["Title"] = "Details of a Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.ProducerName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded" style="max-width: 350px; max-height: 350px;" />
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="ProfilePicturePath" class="control-label"></label>
                    <input asp-for="ProfilePicturePath" class="form-control" readonly />
                    <span asp-validation-for="ProfilePicturePath" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="ProducerName" class="control-label"></label>
                    <input asp-for="ProducerName" class="form-control" readonly />
                    <span asp-validation-for="ProducerName" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="Biography" class="control-label"></label>
                    <input asp-for="Biography" class="form-control" readonly />
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>

                <div class="form-group" style="padding-top: 20px;">
                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id" >Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePicturePath").val();
        })
    </script>
}