@model CinemaViewModel

@{
    ViewData["Title"] = "Update Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@ViewData["Title"]</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded" style="max-width: 350px; max-height: 350px;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoPath" class="control-label"></label>
                        <input asp-for="LogoPath" class="form-control" />
                        <span asp-validation-for="LogoPath" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 20px;">
                        <label asp-for="CinemaName" class="control-label"></label>
                        <input asp-for="CinemaName" class="form-control" />
                        <span asp-validation-for="CinemaName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top: 20px;">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding-top: 20px;">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#LogoPath").val();
        })
        $("#LogoPath").on("change", function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}