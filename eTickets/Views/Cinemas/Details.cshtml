@model CinemaViewModel

@{
    ViewData["Title"] = "Details of a Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.CinemaName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded" style="max-width: 350px; max-height: 350px;" />
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="LogoPath" class="control-label"></label>
                    <input asp-for="LogoPath" class="form-control" readonly />
                    <span asp-validation-for="LogoPath" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="CinemaName" class="control-label"></label>
                    <input asp-for="CinemaName" class="form-control" readonly />
                    <span asp-validation-for="CinemaName" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group" style="padding-top: 20px;">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id" >Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#LogoPath").val();
        })
    </script>
}